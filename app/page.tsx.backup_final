        {/* Calculator */}
        <div className="max-w-4xl mx-auto bg-gradient-to-br from-blue-50 to-white border-2 border-blue-200 rounded-lg p-8 mb-16">
          <h2 className="text-3xl font-bold mb-6 text-center text-gray-900">Calculate Your Returns</h2>
          <div className="grid md:grid-cols-2 gap-8">
            <div>
              <label className="block text-gray-700 font-medium mb-2">Deposit Amount (SOL)</label>
              <input
                type="number"
